<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>adamsimpson.net Micro feed</title>
    <link>https://adamsimpson.net/</link>
    <description>micro blog posts from adamsimpson.net</description>
    <lastBuildDate>{{now}}</lastBuildDate>
    <language>en-us</language>

    {{#each posts}}
      <item>
        <title>micro post #{{post_id}}</title>
        <link>https://adamsimpson.net/micro/{{post_id}}</link>
        <guid>https://adamsimpson.net/micro/{{post_id}}</guid>
        <pubDate>{{postdate}}</pubDate>
        <content>
          <![CDATA[ {{content}} ]]>
        </content>
      </item>
    {{/each}}
  </channel>
</rss>
